<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3"
    tools:context=".fragments.ReportsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="100sp"
            android:layout_marginRight="10sp"
            android:columnCount="2"
            android:rowCount="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/fuelReports"
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30sp"
                app:cardCornerRadius="10sp">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="64dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/gas_pump_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="69dp"
                    android:paddingTop="30sp"
                    android:paddingBottom="10sp"
                    android:textStyle="bold"
                    android:text="Fuel"
                    android:textAlignment="gravity"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/serviceReports"
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginBottom="30sp"
                app:cardCornerRadius="10sp">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="64dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/service_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="60dp"
                    android:paddingTop="30sp"
                    android:paddingBottom="10sp"
                    android:textStyle="bold"
                    android:text="Service"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/taxesReports"
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30sp"
                app:cardCornerRadius="10sp">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="64dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/taxes_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="65dp"
                    android:paddingTop="30sp"
                    android:paddingBottom="10sp"
                    android:textStyle="bold"
                    android:text="Taxes"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/otherReports"
                android:layout_width="30dp"
                android:layout_height="150dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_marginBottom="30sp"
                app:cardCornerRadius="10sp">

                <ImageView
                    android:layout_width="77dp"
                    android:layout_height="64dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/other_icon" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="69dp"
                    android:paddingTop="30sp"
                    android:paddingBottom="10sp"
                    android:textStyle="bold"
                    android:text="Other"
                    android:textSize="20sp" />

            </androidx.cardview.widget.CardView>
        </GridLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/addExpense"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30sp"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="10sp">

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/add_512" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="69dp"
                android:paddingTop="30sp"
                android:paddingBottom="30sp"
                android:textStyle="bold"
                android:text="Add expense"
                android:textAlignment="gravity"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>
