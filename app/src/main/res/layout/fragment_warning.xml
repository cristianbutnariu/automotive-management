<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#D3D3D3"
    tools:context=".fragments.WarningFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/rovinieta"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30sp"
        app:cardCornerRadius="10sp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/road_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="69dp"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:text="Pay road tax"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/fuelprices"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30sp"
        app:cardCornerRadius="10sp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/gas_pump_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="69dp"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:text="Check fuel prices"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/rca"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30sp"
        app:cardCornerRadius="10sp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/insurance_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="69dp"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:text="Buy insurance"
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/workinprogress"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="410sp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30sp"
        app:cardCornerRadius="10sp">

        <ImageView
            android:layout_width="77dp"
            android:layout_height="64dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/add_512" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="69dp"
            android:paddingTop="30sp"
            android:paddingBottom="30sp"
            android:text="More to come later..."
            android:textAlignment="gravity"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>


</RelativeLayout>